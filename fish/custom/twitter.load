function timeline -d "My twitter timeline"
  t timeline -l
end

function tweet -d "Send a tweet"
  t update $argv[1]
end

function retweet -d "Retweet a tweet"
  t retweet $argv[1]
end

function dm -d "Send a direct message (twitter)"
  t dm $argv[1] $argv[2]
end

function reply -d "Reply to a tweet"
  t reply $argv[1] $argv[2]
end

function mentions -d "Shows tweets that mention me"
  t mentions -l
end
